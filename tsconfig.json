{
  "compilerOptions": {
    // File Layout
    "rootDir": "./",
    "outDir": "./dist",

    // Environment Settings
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"],

    // Output Options
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false, // Keep comments for better AI agent understanding

    // Strict Type Checking Options (Temporarily relaxed for build stability)
    "strict": false,
    "noImplicitAny": false, // Temporarily disabled
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false, // Temporarily disabled
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": false, // Temporarily disabled
    "exactOptionalPropertyTypes": false, // Temporarily disabled

    // Additional Checks for Code Quality (Temporarily relaxed)
    "noImplicitReturns": false, // Temporarily disabled
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": false, // Temporarily disabled
    "noPropertyAccessFromIndexSignature": false, // Temporarily disabled

    // Code Quality Options (Temporarily relaxed for gradual migration)
    "noUnusedLocals": false, // Will enable after refactoring
    "noUnusedParameters": false, // Will enable after refactoring

    // Module Resolution
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    // Advanced Options
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
