{
  "compilerOptions": {
    // File Layout - Optimized for performance
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings - Latest stable versions for performance
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],

    // Output Options - Optimized for production
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true, // Remove comments in production for smaller bundles
    "importHelpers": true, // Use tslib helpers to reduce bundle size
    "downlevelIteration": true, // Better iteration support

    // Strict Type Checking - Enhanced for code quality
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true, // Prevent index access errors
    "exactOptionalPropertyTypes": false, // Temporarily disabled for advanced services compatibility // Stricter optional properties

    // Additional Checks for Code Quality
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    // Code Quality Options - Enabled for clean code
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Module Resolution - Enhanced
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,

    // Advanced Options - Performance optimized
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "composite": false,
    "preserveWatchOutput": true,
    "pretty": true,

    // Emit Options - Optimized
    "newLine": "lf",
    "stripInternal": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
