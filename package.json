  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "seed": "tsx scripts/seedEquipment.ts",
    "build": "tsc -p .",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "deploy": "npm run build && firebase deploy --only functions,hosting:api",
    "deploy:frontend": "npm run build:frontend && firebase deploy --only hosting:frontend",
    "deploy:frontend:fresh": "node scripts/deploy-with-cache-bust.js",
    "deploy:all": "npm run build:all && firebase deploy",
    "setup:dev": "node scripts/dev-setup.js development",
    "setup:prod": "node scripts/dev-setup.js production"
  },
