{
  "name": "ai-workout-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:debug": "tsx watch --inspect src/index.ts",
    "seed": "tsx scripts/seedEquipment.ts",
    "build": "npm run clean && tsc -p . --incremental",
    "build:watch": "tsc -p . --watch",
    "build:production": "npm run clean && tsc -p . --incremental --sourceMap false",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build:production && npm run build:frontend",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test:enhancements": "./scripts/test-enhancements.sh",
    "deploy:functions": "npm run build:production && firebase deploy --only functions",
    "deploy:hosting": "npm run build:frontend && firebase deploy --only hosting",
    "deploy:all": "npm run build:all && firebase deploy",
    "build:enhanced": "npm run build:production && npm run build:frontend:enhanced",
    "build:frontend:enhanced": "cd frontend && npm run build && npm run build:sw",
    "start": "node dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit --passWithNoTests",
    "test:all": "npm run test && npm run test:lighthouse",
    "test:lighthouse": "lhci autorun",
    "test:performance": "npm run test && npm run test:lighthouse",
    "analyze:bundle": "cd frontend && npm run build:analyze",
    "optimize:images": "imagemin frontend/public/images/* --out-dir=frontend/public/images/optimized",
    "deploy": "npm run build:production && firebase deploy --only functions,hosting",
    "deploy:frontend": "npm run build:frontend && firebase deploy --only hosting",
    "deploy:frontend:fresh": "node scripts/deploy-with-cache-bust.js",
    "deploy:enhanced": "npm run build:enhanced && firebase deploy --only functions,hosting",
    "deploy:production": "npm run build:enhanced && firebase deploy --only functions,hosting --project production",
    "setup:dev": "node scripts/dev-setup.js development",
    "setup:prod": "node scripts/dev-setup.js production",
    "enhance": "node scripts/enhance-application.js",
    "precommit": "npm run lint && npm run typecheck",
    "prepush": "npm run test",
    "postinstall": "npm run build",
    "build:optimized": "npm run clean && tsc -p . --incremental --skipLibCheck --noUnusedLocals false --noUnusedParameters false",
    "build:fast": "npm run clean && tsc -p . --incremental --skipLibCheck --noEmit false",
    "build:production-safe": "npm run clean && tsc -p . --incremental --skipLibCheck --noUnusedLocals false --noUnusedParameters false",
    "health:check": "node -e \"console.log('Health check passed')\"",
    "security:audit": "npm audit --audit-level moderate",
    "performance:monitor": "node scripts/performance-monitor.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "lru-cache": "^11.2.1",
    "node-cache": "^5.1.2",
    "openai": "^5.16.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "uuid": "^12.0.0",
    "validator": "^13.15.15",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "pino-http": "^10.3.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "volta": {
    "node": "20.18.0",
    "npm": "10.8.2"
  }
}
