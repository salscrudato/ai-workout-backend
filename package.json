    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^8.1.0",
    "openai": "^5.16.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "^3.25.76"
