{
  "name": "ai-workout-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:debug": "tsx watch --inspect src/index.ts",
    "seed": "tsx scripts/seedEquipment.ts",
    "build": "npm run clean && tsc -p . --incremental",
    "build:watch": "tsc -p . --watch",
    "build:production": "npm run clean && tsc -p . --incremental --sourceMap false && node scripts/create-dist-package.cjs",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build:production && npm run build:frontend",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "deploy:functions": "npm run build:production && firebase deploy --only functions",
    "deploy:hosting": "npm run build:frontend && firebase deploy --only hosting",
    "deploy": "npm run build:production && firebase deploy --only functions,hosting",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "setup:dev": "node scripts/dev-setup.js development",
    "precommit": "npm run lint && npm run typecheck",
    "prepush": "npm run test",
    "postinstall": "npm run build",
    "audit": "npm audit --audit-level moderate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "lru-cache": "^11.2.1",
    "node-cache": "^5.1.2",
    "openai": "^5.16.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "uuid": "^12.0.0",
    "validator": "^13.15.15",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "volta": {
    "node": "20.18.0",
    "npm": "10.8.2"
  }
}
